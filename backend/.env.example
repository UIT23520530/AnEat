# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL="postgresql://username:password@localhost:5432/aneat_db?schema=public"

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-use-random-string"
JWT_EXPIRES_IN="7d"

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
NODE_ENV=production

# ========================================
# CORS CONFIGURATION
# ========================================
FRONTEND_URL="http://localhost:3001"
ALLOWED_ORIGINS="http://localhost:3001,https://your-frontend-domain.com"

# ========================================
# UPLOAD CONFIGURATION (Optional)
# ========================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR="./uploads"

# ========================================
# LOGGING (Optional)
# ========================================
LOG_LEVEL="info"

# ========================================
# RATE LIMITING (Optional)
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# NOTES FOR PRODUCTION:
# ========================================
# 1. Change DATABASE_URL to your production database
# 2. Generate a strong JWT_SECRET (use: openssl rand -base64 32)
# 3. Set NODE_ENV=production
# 4. Update FRONTEND_URL and ALLOWED_ORIGINS
# 5. Never commit this file with real credentials
# ========================================
